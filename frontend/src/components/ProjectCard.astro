---
interface Props {
  title: string;
  description: string;
  category: 'personal' | 'opensource' | 'professional';
  slug: string;
  tags?: string[];
  github?: string;
  website?: string;
  image?: string;
  hasContent?: boolean;
}

const { title, description, category, slug, tags = [], github, website, image, hasContent = true } = Astro.props;

const categoryLabels = {
  personal: 'personal',
  opensource: 'open-source',
  professional: 'professional',
};
---

<article class="project-card card">
  {image && (
    <div class="project-image">
      <img src={image} alt={title} loading="lazy" />
    </div>
  )}
  <div class="project-content">
    <div class="project-meta">
      <span class="category">{categoryLabels[category]}</span>
    </div>

    <h3 class="project-title">
      {hasContent ? (
        <a href={`/projects/${slug}`}>{title}</a>
      ) : (
        <span>{title}</span>
      )}
    </h3>

    <p class="project-description">{description}</p>

    {tags.length > 0 && (
      <div class="project-tags">
        {tags.slice(0, 4).map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}

    <div class="project-links">
      {hasContent ? (
        <a href={`/projects/${slug}`} class="read-more">read more â†’</a>
      ) : (
        <span class="no-content"></span>
      )}
      <div class="external-links">
        {github && (
          <a href={github} target="_blank" rel="noopener noreferrer" class="icon-link" title="GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
        {website && (
          <a href={website} target="_blank" rel="noopener noreferrer" class="icon-link" title="Website">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
        )}
      </div>
    </div>
  </div>
</article>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .project-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.02);
  }

  .project-content {
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .project-meta {
    margin-bottom: var(--space-sm);
  }

  .category {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-primary);
    text-transform: lowercase;
  }

  .project-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    line-height: 1.4;
  }

  .project-title a {
    color: var(--color-text);
  }

  .project-title a:hover {
    color: var(--color-primary);
  }

  .project-description {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: var(--space-md);
    flex: 1;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-lg);
  }

  .project-links {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .read-more {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
  }

  .read-more:hover {
    color: var(--color-primary);
  }

  .external-links {
    display: flex;
    gap: var(--space-sm);
  }

  .icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: var(--color-text-muted);
    border-radius: var(--radius-sm);
    transition: all 0.15s ease;
  }

  .icon-link:hover {
    color: var(--color-primary);
    background: var(--color-bg-secondary);
  }
</style>
