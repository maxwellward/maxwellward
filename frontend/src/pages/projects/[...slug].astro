---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const { Content } = await render(project);

const categoryLabels: Record<string, string> = {
  personal: 'personal',
  opensource: 'open-source',
  professional: 'professional',
};

const formattedDate = project.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<BaseLayout title={project.data.title} description={project.data.description}>
  <article class="project-page">
    <div class="container">
      <header class="project-header">
        <a href="/projects" class="back-link">← back to projects</a>

        <div class="project-meta">
          <span class="category">{categoryLabels[project.data.category]}</span>
          <span class="separator">·</span>
          <time datetime={project.data.date.toISOString()}>{formattedDate}</time>
        </div>

        <h1 class="project-title">{project.data.title}</h1>
        <p class="project-description">{project.data.description}</p>

        {project.data.tags.length > 0 && (
          <div class="project-tags">
            {project.data.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}

        <div class="project-links">
          {project.data.github && (
            <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="btn btn-outline">
              github
            </a>
          )}
          {project.data.website && (
            <a href={project.data.website} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
              visit site
            </a>
          )}
        </div>
      </header>

      {project.data.image && (
        <div class="project-image">
          <img src={project.data.image} alt={project.data.title} />
        </div>
      )}

      <div class="project-content prose">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .project-page {
    padding: var(--space-xl) 0 var(--space-3xl);
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-xl);
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .project-header {
    max-width: 720px;
    margin-bottom: var(--space-2xl);
  }

  .project-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
    font-family: var(--font-mono);
    font-size: 0.8125rem;
  }

  .category {
    color: var(--color-primary);
  }

  .separator {
    color: var(--color-text-muted);
    opacity: 0.5;
  }

  .project-meta time {
    color: var(--color-text-muted);
  }

  .project-title {
    font-size: 2.5rem;
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: var(--color-text);
  }

  .project-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-xl);
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .project-image {
    margin-bottom: var(--space-2xl);
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  .project-image img {
    width: 100%;
    height: auto;
  }

  .project-content {
    max-width: 720px;
  }

  @media (max-width: 768px) {
    .project-title {
      font-size: 2rem;
    }

    .project-description {
      font-size: 1rem;
    }
  }
</style>
